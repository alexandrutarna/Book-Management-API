{
    "root": true,
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:jest/recommended"
    ],
    "plugins": [
        "n",
        "promise",
        "import",
        "security",
        "jest"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "commonjs"
    },
    "overrides": [
        {
            "files": [
                "tests/**/*.js",
                "**/*.test.js"
            ],
            "env": {
                "jest": true
            }
        }
    ],
    "rules": {
        "no-unused-vars": [
            "warn",
            {
                "argsIgnorePattern": "^_",
                "varsIgnorePattern": "^_"
            }
        ],
        "curly": [
            "error",
            "all"
        ],
        "import/order": [
            "warn",
            {
                "groups": [
                    "builtin",
                    "external",
                    "internal",
                    "parent",
                    "sibling",
                    "index"
                ],
                "newlines-between": "always"
            }
        ]
    }
}